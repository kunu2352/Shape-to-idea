<div class="container">
  <div class="row">
    <div class=col-10 mx-auto>
      <%= form_with model: @user, url:public_user_path(@user.id), method: :patch do |f| %>
      <table>
        <tr>
          <th><%= f.file_field :user_image, accept: "image/*" %></th>
        </tr>
        <tr>
          <th><%= f.label :name, "名前" %></th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th><%= f.label :postal_code, '住所' %></th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th><%= f.label :prefecture, '都道府県' %></th>
          <th><%= f.text_field :prefecture %> </th>
        </tr>
        <tr>
          <th><%= f.label :city, '市町村区' %></th>
          <th><%= f.text_field :city %></th>
        </tr>
        <tr>
          <th><%= f.label :street, '番地' %></th>
          <th><%= f.text_field :street %></th>
        </tr>
        <tr>
          <th><%= f.label :telephone_number, '電話番号' %></th>
          <th><%= f.text_field :telephone_number %></th>
        </tr>
        <tr>
          <th><%= f.label :email, 'メールアドレス' %></th>
          <th><%= f.email_field :email %></th>
        </tr>
        <tr>
          <th></th>
        <th class="actions">
          <%= f.submit "変更を保存" %>
        </th>          
        </tr>
      </table>
    <!--</div>-->
    <!--<div  class="btn-wrapper col-3 mx-auto">-->
      <%= link_to "退会する", public_confirm_user_path, class:"btn btn-info btn-sm btn-block mb-3" %>
      <% end %>
    </div>
  </div>
</div>