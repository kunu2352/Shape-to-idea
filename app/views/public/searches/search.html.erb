<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to public_user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @post_ideas.each do |post_idea| %>
        <tr>
          <td><%= post_idea.title %></td>
          <td><%= post_idea.free_body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>