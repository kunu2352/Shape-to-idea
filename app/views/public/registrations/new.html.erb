<div class="container">
  <div class="row justify-content-center">
     <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div class="row justify-content-center">
    <h2>新規登録</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'ユーザ名' %><br/>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :telephone_number, '電話番号' %><br />
        <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード(6字以上)" %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード(再確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
      <div class="actions mt-2">
        <%= render "public/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
