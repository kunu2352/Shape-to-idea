<div class="container-fluid">
  <div class="d-flex justify-content-center">
    <div class="col-7">
      <div class="d-flex justify-content-center">
        <h3>募集タイトル</h3>
      </div>
      <div class="d-flex justify-content-center">
        <h3><%= @idea_request.title %></h3>
      </div>
      <div class="d-flex justify-content-center">
        <p><%= @idea_request.content %></p>
      </div>
      <div>
        <%= form_with model: @call_for_idea, url: admin_comfirm_path do |f| %>
          <%= f.label :recruitment_image_banner, "バナー画像" %>
          <%= f.file_field :post_image, accept: "image/*" %>
          <%= f.label :user_id, "リクエスト" %>  
          <%= f.file_field :post_image, accept: "image/*" %>
          <div class="field">
            <%= f.label :user_id, "ユーザーID" %>
            <%= f.number_field :user_id, class: "form-control"  %>
          </div>
          <div class="field">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :recruitment, "リクエスト内容" %>
            <%= f.text_area :recruitment, class: "form-control" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
