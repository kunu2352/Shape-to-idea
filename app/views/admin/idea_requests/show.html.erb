<div class="container-fluid">
  <div class="d-flex justify-content-center">
    <div class="col-7">
      <div  class="d-flex justify-content-center">
        <table class="table">
          <thead>
            <tr>
              <th class="col-2">ユーザーID</th>
              <th class="col-2">ユーザー名</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= @idea_request.user.id %></th>
              <th><%= @idea_request.user.name %></th>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center">
        <h3>募集タイトル</h3>
      </div>
      <div class="d-flex justify-content-center">
        <h3><%= @idea_request.title %></h3>
      </div>
      <div class="d-flex justify-content-center">
        <h3>メールアドレス</h3>
      </div>
      <div class="d-flex justify-content-center">
        <p><%= @idea_request.email %></p>
      </div>
      <div class="d-flex justify-content-center">
        <h3>電話番号</h3>
      </div>
      <div class="d-flex justify-content-center">
        <p><%= @idea_request.telephone_number %></p>
      </div>
      <div class="d-flex justify-content-center">
        <h3>依頼詳細</h3>
      </div>
      <div class="d-flex justify-content-center">
        <p><%= @idea_request.content %></p>
      </div>
      <div>
        <h4>アイディアリクエスト作成</h4>
        <%= form_with model: @call_for_idea, url: admin_confirm_path, method: :post do |f| %>
          <%= f.label :recruitment_image_banner, "バナー画像" %><br>
          <%= f.file_field :recruitment_image_banner, accept: "image/*" %><br>
          <%= f.label :recruitment_image, "参考画像" %><br>
          <%= f.file_field :recruitment_image, accept: "image/*" %><br>
          <div class="field">
            <%= f.label :user_id, "ユーザーID" %>
            <%= f.number_field :user_id, class: "form-control"  %>
          </div>
          <div class="field">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :recruitment, "リクエスト内容" %>
            <%= f.text_area :recruitment, class: "form-control" %>
          </div>
          <%= f.submit "作成", class: "btn btn-success mb-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
