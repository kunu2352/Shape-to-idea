<div class="container-fluid">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th class="col-2">ユーザー名</th>
          <th class="col-2">電話番号</th>
          <th class="col-6">紹介</th>
          <th class="col-1">メールアドレス</th>
          <th class="col-1">状態</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><%= @user.name %></th>
          <th scope="row"><%= @user.telephone_number %></th>
          <th scope="row"><%= @user.introduction %></th>
          <td scope="row"><%= @user.email %></td>
          <td scope="row"><%= @user.is_active ? '有効':'無効' %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= render 'public/post_ideas/post_idea_card', post_ideas: @post_idea %>
</div>